<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="40dip"
    android:paddingRight="40dip"
    android:paddingTop="80dip"
    tools:context=".Asteroides" >

    <TextView
        android:gravity="center"
        android:layout_marginBottom="15dip"
        style="@style/EstiloAsteroides"
        android:text="@string/app_name" />

    <Button
        android:id="@+id/btnPlay"
        style="@style/EstiloAsteroides.Botones"
        android:text="@string/menu_play" />

    <Button
        android:id="@+id/btnConfig"
        style="@style/EstiloAsteroides.Botones"
        android:text="@string/menu_config" />

    <Button
        android:id="@+id/btnAbout"
        style="@style/EstiloAsteroides.Botones"
        android:text="@string/menu_about" />

    <Button
        android:id="@+id/btnRating"
		style="@style/EstiloAsteroides.Botones"
        android:text="@string/menu_rating" />

    <Button
        android:id="@+id/btnExit"
        style="@style/EstiloAsteroides.Botones"
        android:text="@string/menu_exit" />

</LinearLayout>